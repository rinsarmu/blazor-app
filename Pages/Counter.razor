@page "/counter"
@page "/counter/{StartingValue}"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

@if (currentCount > 10) {
    <p> You win </p>
} 

<p role = "status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-primary" @onclick="() => currentCount-=4">Reset Me</button>

<input @onchange='InputChanged'  />
<input @bind="text" />
<button @onclick="() => text = string.Empty">Clear</button>
<p>@text</p>
<p>@message </p>



@code {
    private int currentCount = 0;
    private string message= "hello";
    private string text= "hello";


    //Evnet handling for input text
    public void InputChanged(ChangeEventArgs e){
        message = (string)e.Value;
        
    }

    [Parameter]
    public int StartingValue { get; set;}  = 1;

    <!-- protected override void onParameterSet(){
        currentCount = StartingValue;
    } -->

    [Parameter]
    public int IncrementAmount { get; set; } = 4;

    private void IncrementCount()
    {
        currentCount += IncrementAmount;
    }
}